---
import Base from '../layouts/Base.astro';

const allPosts = await Object.entries(
  import.meta.glob('./posts/*.md', { eager: true })
);
---

<Base pageTitle="Blog">
  <div class="container">
    <h1>Blog</h1>
    <nav>
      <ul>
        {
          allPosts.map((post: any) => (
            <li>
              {
                <a class="post__link" href={post[1].url}>
                  {post[1].frontmatter.title}
                </a>
              }
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</Base>

