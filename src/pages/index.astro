---
import Home from '../layouts/Home.astro';
import Nav from '../components/Nav.astro';

const pageTitle = 'Home';
---

<Home pageTitle={pageTitle}>
  <div class="hero">
    <div class="hero-content">
      <h1 class="hero__text">doug's <span>thoughts</span></h1>
      <Nav pageTitle={pageTitle} />
    </div>
    <div class="blob"></div>
  </div>
</Home>

<style>
  .hero {
    --background-position: center;
    --background-size: 1rem;
    --overlay: 0;

    position: relative;
    height: 100%;
    display: grid;
    place-content: center;
    padding: 5rem;
    box-shadow: inset 0 0 5rem 0 black;
    overflow: hidden;

    &::before {
      content: '';
      position: absolute;
      inset: 0;
      background-color: rgba(20, 20, 0, 0.3);
      opacity: var(--overlay);
      backdrop-filter: blur(1px);

      transition: opacity 250ms ease;
    }

    &::after {
      content: '';
      position: absolute;
      inset: 0;
      background: linear-gradient(to right, #70809020 50%, #f0ffff20 50%);
      background-size: var(--background-size);
      background-repeat: repeat;
      backdrop-filter: blur(15rem);
      /* background-position-x: var(--background-position); */
      z-index: -1;

      transition:
        background-position-x 200ms cubic-bezier(0.165, 0.84, 0.44, 1),
        background-size 200ms ease;
    }
  }

  .hero-content {
    position: relative;
    max-width: 1200px;
    min-width: 320px;
    width: 100%;
  }

  .hero__text {
    --text-color: rgb(240, 230, 140);
    --text-shadow-x: 1.5rem;
    --text-shadow-y: 1.5rem;

    font-size: 18rem;
    font-family: 'josefin sans';
    text-align: right;
    user-select: none;
    color: var(--text-color);
    line-height: 0.5;
    text-shadow:
      0 0 2rem rgba(240, 230, 140, 0.75),
      var(--text-shadow-x) var(--text-shadow-y) 12px black,
      -2rem 2rem 4rem #00000050,
      0.3rem 0.3rem 4px black;

    span {
      font-size: 8rem;
      font-family: 'league script';
      text-align: right;
    }
  }

  .blob {
    position: absolute;
    top: 50%;
    left: 50%;
    translate: -50% -50%;
    width: 40vw;
    aspect-ratio: 1;
    border-radius: 100vw;
    background-color: rgba(240, 230, 140, 0.1);
    z-index: -2;
  }
</style>

<script>
  const hero = document.querySelector('.hero');
  const heroText = document.querySelector('.hero__text');
  const navItems = document.querySelectorAll('.nav-item');
  const blob = document.querySelector('.blob');

  const heroLocation = heroText?.getBoundingClientRect();
  console.log(heroLocation);

  const animation = function (e: any) {
    hero?.animate(
      { backgroundPositionX: `${e.clientX / 25}px` },
      {
        duration: 2000,
        easing: 'ease',
        pseudoElement: '::after',
        fill: 'forwards',
      }
    );

    blob?.animate(
      { left: `${e.clientX}px`, top: `${e.clientY}px` },
      {
        duration: 12000,
        easing: 'linear',
        fill: 'forwards',
      }
    );
  };

  document.addEventListener('mousemove', animation);

  navItems.forEach(item =>
    item.addEventListener('mouseover', function () {
      hero.style.setProperty('--overlay', '100%');
    })
  );

  navItems.forEach(item =>
    item.addEventListener('mouseout', function () {
      hero.style.setProperty('--overlay', '0%');
    })
  );
</script>
