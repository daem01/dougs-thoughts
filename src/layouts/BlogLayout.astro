---
import CommonHead from '../components/CommonHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
const { frontmatter } = Astro.props;
---

<html lang="en">
  <CommonHead pageTitle={frontmatter.title} />

  <body>
    <div class="wrapper">
      <Header />

      <div class="container">
        <div class="content">
          <h1 class="post-title">{frontmatter.title}</h1>
          <h3 class="post-author">Author: {frontmatter.author}</h3>
          <p class="post-date">{frontmatter.pubDate}</p>
          <br />
          <hr />
          <slot />
        </div>
      </div>

      <Footer />
    </div>
  </body>
</html>

<style>
  .wrapper {
    display: grid;
    grid-template-rows: auto 1fr auto;
    min-height: 100dvh;
  }

  .container {
    position: relative;
    min-height: 100%;
    padding-block: 4rem;
    background: linear-gradient(to right, mediumaquamarine 50%, azure 50%);
    background-repeat: repeat;
    background-size: 1rem;
    padding-inline: 4rem;

    z-index: -1;

    &::after {
      content: '';
      position: absolute;
      inset: 0;
      background-color: rgba(245, 245, 245, 0.3);
      backdrop-filter: blur(2px);
      z-index: -1;
    }

    .content {
      position: relative;
      display: block;
      margin: 0 auto;
      max-width: 1200px;
      width: 100%;
      min-width: 320px;
      padding: 2rem;
      background-color: azure;
      box-shadow: 3px 5px 1rem 0 #000000aa;
      border-radius: 10px;
    }

    .post-title {
      font-family: 'josefin sans';
      font-size: 2.5rem;
    }

    .post-author {
      font-family: 'nothing you could do';
    }

    .post-date {
      font-family: 'sriracha';
      font-size: 1rem;
      position: absolute;
      top: 2rem;
      right: 2rem;
    }
  }
</style>

<style is:global>
  *,
  *::before,
  *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    font-family: 'quicksand';
  }
</style>
